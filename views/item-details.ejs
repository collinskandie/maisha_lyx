<body>
  <!-- Hero Section Begin -->
  <%- include('hero.ejs') %>
  <section class="product-details spad">
    <div class="container">
      <div class="row">
        <div class="col-lg-6 col-md-6">
          <div class="product__details__pic">
            <div class="product__details__pic__item">
              <img
                class="product__details__pic__item--large"
                src="/img/uploads/<%= Array.isArray(product.imagesurl) ? product.imagesurl[0] : product.imagesurl %>"
                alt=""
              />
            </div>
            <div class="product__details__pic__slider owl-carousel">
              <img
                data-imgbigurl="/img/uploads/<%= Array.isArray(product.imagesurl) ? product.imagesurl[1] : product.imagesurl %>"
                src="/img/uploads/<%= Array.isArray(product.imagesurl) ? product.imagesurl[1] : product.imagesurl %>"
                alt=""
              />
              <img
                data-imgbigurl="/img/uploads/<%= Array.isArray(product.imagesurl) ? product.imagesurl[2] : product.imagesurl %>"
                src="/img/uploads/<%= Array.isArray(product.imagesurl) ? product.imagesurl[2] : product.imagesurl %>"
                alt=""
              />
              <img
                data-imgbigurl="/img/uploads/<%= Array.isArray(product.imagesurl) ? product.imagesurl[3] : product.imagesurl %>"
                src="/img/uploads/<%= Array.isArray(product.imagesurl) ? product.imagesurl[3] : product.imagesurl %>"
                alt=""
              />
              <img
                data-imgbigurl="/img/uploads/<%= Array.isArray(product.imagesurl) ? product.imagesurl[4] : product.imagesurl %>"
                src="/img/uploads/<%= Array.isArray(product.imagesurl) ? product.imagesurl[4] : product.imagesurl %>"
                alt=""
              />
            </div>
          </div>
        </div>
        <div class="col-lg-6 col-md-6">
          <div class="product__details__text">
            <h3><%= product.name %></h3>
            <div class="product__details__rating">
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
              <i class="fa fa-star"></i>
              <i class="fa fa-star-half-o"></i>
              <span>(18 reviews)</span>
            </div>
            <div class="product__details__price">KES <%= product.price %></div>
            <p><%= product.description %></p>
            <div class="product__details__quantity">
              <div class="quantity">
                <div class="pro-qty">
                  <input type="text" value="1" />
                </div>
              </div>
            </div>
            <% if (product.type == "Services"){ %>
            <a
              href="#"
              onclick="openModal('<%= product.productid %>', '<%= product.name %>')"
              class="primary-btn"
              >Book Service</a
            >
            <% } else { %>
            <a
              href="#"
              onclick="addToCart('<%= product.productid %>', '<%= product.name %>')"
              class="primary-btn"
              >ADD TO CART</a
            >
            <%} %>

            <a href="#" class="heart-icon"
              ><span class="icon_heart_alt"></span
            ></a>
            <ul>
              <li>
                <b>Availability</b> <span><%= product.availability %></span>
              </li>
              <li>
                <b>Shipping</b>
                <span>01 day shipping. <samp>Free pickup today</samp></span>
              </li>
              <li><b>Weight</b> <span><%= product.weight %> KG</span></li>
              <li>
                <b>Share on</b>
                <div class="share">
                  <a href="#"><i class="fa fa-facebook"></i></a>
                  <a href="#"><i class="fa fa-twitter"></i></a>
                  <a href="#"><i class="fa fa-instagram"></i></a>
                  <a href="#"><i class="fa fa-pinterest"></i></a>
                </div>
              </li>
            </ul>
          </div>
        </div>
        <div class="col-lg-12">
          <div class="product__details__tab">
            <ul class="nav nav-tabs" role="tablist">
              <li class="nav-item">
                <a
                  class="nav-link active"
                  data-toggle="tab"
                  href="#tabs-1"
                  role="tab"
                  aria-selected="true"
                  >Description</a
                >
              </li>
              <li class="nav-item">
                <a
                  class="nav-link"
                  data-toggle="tab"
                  href="#tabs-2"
                  role="tab"
                  aria-selected="false"
                  >Information</a
                >
              </li>
              <li class="nav-item">
                <a
                  class="nav-link"
                  data-toggle="tab"
                  href="#tabs-3"
                  role="tab"
                  aria-selected="false"
                  >Reviews <span>(1)</span></a
                >
              </li>
            </ul>
            <div class="tab-content">
              <div class="tab-pane active" id="tabs-1" role="tabpanel">
                <div class="product__details__tab__desc">
                  <h6>Products Infomation</h6>
                  <p><%= product.description %></p>
                </div>
              </div>
              <div class="tab-pane" id="tabs-2" role="tabpanel">
                <div class="product__details__tab__desc">
                  <h6>Products Infomation</h6>
                  <p><%= product.description %></p>
                  <p><%= product.description %></p>
                </div>
              </div>
              <div class="tab-pane" id="tabs-3" role="tabpanel">
                <div class="product__details__tab__desc">
                  <h6>Products Infomation</h6>
                  <p><%= product.description %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- Product Details Section End -->

  <!-- Related Product Section Begin -->
  <section class="related-product">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="section-title related__product__title">
            <h2>Related Product</h2>
          </div>
        </div>
      </div>
      <div class="row featured__filter">
        <% relatedProducts.forEach(relatedProduct => { %>
        <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
          <div class="featured__item">
            <div
              class="featured__item__pic set-bg"
              data-setbg="/img/uploads/<%= Array.isArray(relatedProduct.imagesurl) ? relatedProduct.imagesurl[0] : relatedProduct.imagesurl %>"
            >
              <ul class="featured__item__pic__hover">
                <li>
                  <a><i class="fa fa-heart"></i></a>
                </li>
                <li></li>
                <li>
                  <a
                    onclick="addToCart('<%= relatedProduct.productid %>', '<%= relatedProduct.name %>')"
                  >
                    <i class="fa fa-shopping-cart"></i>
                  </a>
                </li>
              </ul>
            </div>
            <div class="featured__item__text">
              <h6>
                <a href="/item-details/<%= relatedProduct.productid %>"
                  ><%= relatedProduct.name %></a
                >
              </h6>
              <h5><%= relatedProduct.price %></h5>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
  </section>
  <div class="modal" id="editModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Book Service</h5>
          <span class="close" onclick="closeModal()">&times;</span>
        </div>
        <div class="container">
          <form id="editForm" enctype="multipart/form-data">
            <div class="mb-3">
              <label class="form-label" for="editName">Service Name:</label>
              <input
                type="text"
                class="form-control"
                aria-describedby="nameHelp"
                id="prodId"
                name="prodId"
                hidden
              />
              <input
                type="text"
                class="form-control"
                aria-describedby="nameHelp"
                id="editName"
                name="editName"
                readonly
              />
              <div id="nameHelp" class="form-text">Product name</div>
            </div>
            <div class="mb-3">
              <label class="form-label">Your Name</label>
              <input
                type="text"
                class="form-control"
                id="customerName"
                name="customerName"
              />
              <div id="imageHelp" class="form-text">
                Type in your full name.
              </div>
            </div>
            <div class="mb-3">
              <label class="form-label" for="editPrice">Phone number</label>
              <input
                type="phone"
                class="form-control"
                id="phoneNumber"
                name="phoneNumber"
              />
            </div>
            <div class="mb-3">
              <label class="form-label" for="editPrice">Email</label>
              <input
                type="email"
                class="form-control"
                id="email"
                name="email"
              />
            </div>
            <!-- Add the missing fields below -->
            <div class="mb-3">
              <label class="form-label" for="editCost">Location</label>
              <input
                type="text"
                class="form-control"
                id="location"
                name="Location"
              />
            </div>
            <div class="mb-3">
              <label class="form-label" for="editPrice">Date of Service</label>
              <input
                type="date"
                class="form-control"
                id="bookDate"
                name="bookDate"
              />
            </div>
            <div class="mb-3">
              <label class="form-label" for="editQuantity"
                >Special Requests:</label
              >
              <textarea
                type="text"
                class="form-control"
                id="specialRequest"
                name="specialRequest"
              ></textarea>
            </div>

            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-primary"
                onclick="saveBooking()"
              >
                Book Appointment
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <script>
    function openModal(ProductId, ProductName) {
      const editNameInput = document.getElementById("editName");
      const prodId = document.getElementById("prodId");
      editNameInput.value = ProductName;
      prodId.value = ProductId;
      // Show the modal
      const modal = document.getElementById("editModal");
      modal.style.display = "block";
    }

    // Function to close the modal
    function closeModal() {
      const modal = document.getElementById("editModal");
      modal.style.display = "none";
    }
    function saveBooking() {
      const prodId = document.getElementById("prodId");
      const customerName = document.getElementById("customerName");
      const phoneNumber = document.getElementById("phoneNumber");
      const location = document.getElementById("location");
      const bookDate = document.getElementById("bookDate");
      const specialRequest = document.getElementById("specialRequest");
      const email = document.getElementById("email");

      // Create a FormData object to handle file uploads
      const formData = {
        ProductId: prodId.value,
        customer_name: customerName.value,
        phone: phoneNumber.value,
        location: location.value,
        bookDate: bookDate.value,
        email: email.value,
        specialRequest: specialRequest.value,
      };

      postEditData(formData);
    }
    function postEditData(requestData) {
      const apiUrl = "/api/bookappointment";
      fetch(apiUrl, {
        method: "POST",
        headers: {
          "Content-Type": "application/json", // Specify that you're sending JSON data
        },
        body: JSON.stringify(requestData), // Convert the requestData object to JSON
      })
        .then((response) => {
          if (response.ok) {
            // Product updated successfully, you can update the UI as needed
            closeModal();
            alert(
              "You have successfully booked for this service, kindly wait for our customer care team to reach you"
            );
            window.location.reload();
          } else {
            // Handle error case
            console.error(
              "Failed, We are experinecing some server errrors, please bare with us"
            );
            alert("Product update failed"); // Display an error message
          }
        })
        .catch((error) => {
          console.error("Error:", error);
          alert("An error occurred while updating the Product");
        });
    }
  </script>
</body>
