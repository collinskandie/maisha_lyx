<body>
  <%- include('hero.ejs') %>
  <!-- Hero Section End -->

  <!-- Blog Details Hero Begin -->

  <!-- Blog Details Hero End -->

  <!-- Blog Details Section Begin -->
  <section class="blog-details spad">
    <div class="container">
      <div class="row">
        <div class="col-lg-4 col-md-5 order-md-1 order-2">
          <div class="blog__sidebar">
            <div class="blog__sidebar__search">
              <form action="#">
                <input type="text" placeholder="Search..." />
                <button type="submit"><span class="icon_search"></span></button>
              </form>
            </div>
            <div class="blog__sidebar__item">
              <h4>Categories</h4>
              <ul>
                <% categories.forEach(category => { %>
                <li>
                  <a href="/department/<%= category.id %>"
                    ><%= category.name %></a
                  >
                </li>
                <% }); %> 
              </ul>
            </div>
            <div class="blog__sidebar__item">
              <h4>Listed Products</h4>
              <div class="blog__sidebar__recent">
                <% products_Category.slice(0, 5).forEach(productCat => { %>
                <a
                  href="/item-details/<%= productCat.productid %>"
                  class="blog__sidebar__recent__item"
                >
                  <div class="blog__sidebar__recent__item__pic">
                    <img
                      src="/img/uploads/<%= Array.isArray(productCat.imagesurl) ? productCat.imagesurl[0] : productCat.imagesurl %>"
                      alt=""
                      width="70"
                      height="70"
                    />
                  </div>
                  <div class="blog__sidebar__recent__item__text">
                    <h6>
                      <%= productCat.name %><br />
                      <%= productCat.description %>
                    </h6>
                  </div>
                </a>
                <% }); %>
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-8 col-md-7 order-md-1 order-1">
          <div class="blog__details__text">
            <img
              src="/img/uploads/<%= category.imageUrl %>"
              alt=""
              width="300"
              height="400"
            />
            <h1><%= category.name %></h1>
            <p><%= category.description %></p>
            <hr />
            <h3>Products</h3>
            <div class="row featured__filter">
              <% products_Category.forEach(product => { %>
              <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
                <div class="featured__item">
                  <div
                    class="featured__item__pic set-bg"
                    data-setbg="/img/uploads/<%= Array.isArray(product.imagesurl) ? product.imagesurl[0] : product.imagesurl %>"
                  >
                    <ul class="featured__item__pic__hover">
                      <li>
                        <a><i class="fa fa-heart"></i></a>
                      </li>
                      <li></li>
                      <li>
                        <a
                          onclick="addToCart('<%= product.productid %>', '<%= product.name %>')"
                        >
                          <i class="fa fa-shopping-cart"></i>
                        </a>
                      </li>
                    </ul>
                  </div>
                  <div class="featured__item__text">
                    <h6>
                      <a href="/item-details/<%= product.productid %>"
                        ><%= product.name %></a
                      >
                    </h6>
                    <h5><%= product.price %></h5>
                  </div>
                </div>
              </div>
              <% }); %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- Blog Details Section End -->

  <!-- Related Blog Section Begin -->
</body>
